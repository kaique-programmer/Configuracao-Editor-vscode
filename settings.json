{   
    // Editor 
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true, // Aciona os elementos da font Fira-code para mostrar caracteres especiais
    "editor.fontSize": 14, // Tamanho da fonte do editor de texto
    "editor.tabSize": 2, // Aplica um espaçamento de 2 da esquerda para direita ao pressionar a tecla tab
    "editor.rulers": [ // Linhas verticais que indicam a ultrapassagem do texto 
        100,
        128
    ],
    "editor.suggestSelection": "first", 
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.fixAll": true
    },
    "editor.formatOnSave": false,
    "editor.renderLineHighlight": "gutter", // Aplica um sinal visual na esquerda da linha selecionada
    "editor.parameterHints.enabled": false,
    
    // Eslint validation
    "eslint.validate": [
        "html",
        "javascript",
        "typescript",
        "javascriptreact",
        "typescriptreact"
    ],
    
    
    // Options
    "workbench.iconTheme": "material-icon-theme", // Exibe ícones representativos da tecnologia no arquivo
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "emmet.syntaxProfiles": {
        "javascript": "jsx"
    },
    "javascript.updateImportsOnFileMove.enabled": "never",    
    "breadcrumbs.enabled": true,
    "javascript.suggest.autoImports": true,
    "typescript.suggest.autoImports": true,
    "explorer.confirmDelete": false,
    "workbench.colorTheme": "Dracula", // Tema show de bola 
    "liveServer.settings.donotShowInfoMsg": true, // Abre o arquivo no browser direto pela porta do servidor local
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "workbench.sideBar.location": "left",

    // Git
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    
    // Terminal
    "terminal.integrated.fontSize": 14, // Aumenta a fonte do terminal
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh"
        },
        "fish": {
            "path": "fish"
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        },
        "JavaScript Debug Terminal": {
            "extensionIdentifier": "ms-vscode.js-debug",
            "icon": "debug",
            "id": "extension.js-debug.debugTerminal",
            "title": "JavaScript Debug Terminal"
        },
        "dash": {
            "path": "/bin/dash"
        },
        "/usr/bin/zsh (migrated)": {
            "path": "/usr/bin/zsh",
            "args": []
        }
    },
}
